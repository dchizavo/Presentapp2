<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
    </style>

    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="inputs_primarios">
        <item name="android:layout_width">@dimen/ancho_inputs</item>
        <item name="android:layout_height">@dimen/alto_inputs</item>
        <item name="android:background">@drawable/inputs_primarios</item>
        <item name="android:textColor">@color/color_letra_in_prim</item>
        <item name="android:textColorHint">@color/color_letra_in_prim</item>
    </style>

    <style name="botones_primarios">
        <item name="android:layout_width">@dimen/ancho_inputs</item>
        <item name="android:layout_height">@dimen/alto_inputs</item>
        <item name="android:background">@drawable/botones_primarios</item>
        <item name="android:textColor">@color/color_letra_btn_prim</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="botones_ter">
        <item name="android:layout_width">@dimen/ancho_inputs2</item>
        <item name="android:layout_height">@dimen/alto_inputs2</item>
        <item name="android:background">@drawable/botones_terciarios</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="inputs_secundarios">
        <item name="android:layout_width">@dimen/ancho_inputs</item>
        <item name="android:layout_height">@dimen/alto_inputs</item>
        <item name="android:background">@drawable/inputs_secundarios</item>
        <item name="android:textColor">@color/color_letra_btn_prim</item>
        <item name="android:textColorHint">@color/color_letra_btn_prim</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="adjuntos">
        <item name="android:background">@drawable/adjuntos</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_input</item>
        <item name="android:layout_width">95dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
